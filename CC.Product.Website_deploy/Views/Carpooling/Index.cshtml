@model IEnumerable<CarpoolingInfo>
    @{
        ViewBag.Title = "Index";
    }
    @section headerScripts {
        <link href="~/Content/datePicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    }
    <div class="" style="margin-top:10px">
        <div class="text-center" style="">
            <form class="form-inline" role="form">
                <div class="form-group">
                    <label class="" for="exampleInputPassword2">日期</label>
                    <input type="datetime" class="form-control search-input" id="datetime" placeholder="日期" style="border-width:1px;">
                </div>
                <div class="form-group">

                </div>
                <div class="form-group">
                    <label class="" for="exampleInputEmail2">地点</label>
                    <div class="input-group">
                        <input type="text" class="form-control search-input" id="start" placeholder="始发地" style="border-width:1px;">
                        <div class="input-group-addon" style="background-color: #60AF00;border-color: #60AF00; border-radius: inherit; cursor:pointer" id="changeBtn"><span class="glyphicon glyphicon-transfer"></span></div>
                        <input type="text" class="form-control search-input" id="destination" placeholder="目的地" style="border-width:1px;">
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default search-button" style="border-width:1px;">搜索</button>
                </div>
                <div style="display:inline-block">@Html.ActionLink("发布拼车信息", "Create",null,htmlAttributes : new { @class = "btn btn-default search-button",style="line-height:26px;border-width:1px;border-color:#FD8000;background-color:#FD8000" })</div>
                
            </form>
        </div>
    </div>

    <div class="container" style="margin-top:50px">
        <table class="table table-bordered table-striped">
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.No)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.StartSite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.PublishUserId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.TotalSeatCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HasCar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.PassingBySite)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.StartSite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>*@
                    @*<td>
                        @Html.DisplayFor(modelItem => item.PublishUserId)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalSeatCount)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.HasCar ? "车主":"旅客")*@
                        @(item.HasCar ? "车主":"旅客")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.PassingBySite)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>


    @section scripts {
        <script src="~/Content/datePicker/js/bootstrap-datetimepicker.js"></script>
        <script src="~/Content/datePicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
        <script type="text/javascript">
        $(function () {
            $('#datetime').datetimepicker({
                language:  'zh-CN',
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
                showMeridian: 1
            });
            $("#changeBtn").click(function () {
                var temp = $("#start").val();
                $("#start").val($("#destination").val());
                $("#destination").val(temp);
            });
        });
        </script>
    }
