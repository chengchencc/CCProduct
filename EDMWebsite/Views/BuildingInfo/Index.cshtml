@model IEnumerable<EDMWebsite.Models.DbModels.Building>

@{
    ViewBag.Title = "建筑列表";
    Layout = "~/Views/Shared/_AceLayout.cshtml";
}

<h2>建筑列表</h2>

<p>
    @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-success btn-sm", target = "_blank" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildingArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FloorCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuildingArea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FloorCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) 
            @Html.ActionLink("详情", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-xs" }) 
            @Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
