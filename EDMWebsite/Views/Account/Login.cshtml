@model LoginViewModel

@{
    ViewBag.Title = "登录";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/matrix/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/matrix/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/matrix/css/matrix-login.css" />
    <link href="~/Content/matrix/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/matrix/font-awesome/googleFont.css" rel="stylesheet" />
    @*<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>*@
</head>
<body>
    <div id="loginbox">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", role = "form", id = "loginform" }))
        {
            <div class="control-group normal_text">
                <h3>
                    @*<img src="~/Content/matrix/img/logo.png" alt="Logo" />*@
                    齐鲁工业大学
                </h3>
                <p>能源管理</p>
            </div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "help-inline text-error" })

            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lg"><i class="icon-user"></i></span>@Html.TextBoxFor(m => m.Email, new { placeholder = "Username" })
                        @*<input type="text" placeholder="Username" />*@

                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-error help-block" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_ly"><i class="icon-lock"></i></span>@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @*<input type="password" placeholder="Password" />*@

                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-inline text-error" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <span class="pull-left">
                    <a href="#" class="flip-link btn btn-info" id="to-recover">忘记密码</a>
                </span>
                <span class="pull-right">
                    <button type="submit" class="btn btn-success"> 登陆</button>
                </span>
            </div>
        }

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form", id = "recoverform" }))
        {
            @Html.AntiForgeryToken()
            <p class="normal_text">输入邮箱地址，我们将发给你修改密码的链接.</p>
            
            @Html.ValidationSummary("", new { @class = "text-error" })
            <div class="controls">
                <div class="main_input_box">
                    @Html.TextBoxFor(m => m.Email, new { @class = "" })<span class="add-on bg_lo"><i class="icon-envelope"></i></span>
                </div>
            </div>
            <div class="form-actions">
                <div class="col-md-offset-2 col-md-10">
                    <span class="pull-left"><a href="#" class="flip-link btn btn-success" id="to-login">&laquo; 返回登录</a></span>
                    <span class="pull-right"><input type="submit" class="btn btn-info" value="重置密码" /></span>
                    
                </div>
            </div>
        }


        @*<form id="recoverform" action="#" class="form-vertical">
                <p class="normal_text">Enter your e-mail address below and we will send you instructions how to recover a password.</p>

                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lo"><i class="icon-envelope"></i></span>
                        <input type="text" placeholder="E-mail address" />
                    </div>
                </div>

                <div class="form-actions">
                    <span class="pull-left"><a href="#" class="flip-link btn btn-success" id="to-login">&laquo; Back to login</a></span>
                    <span class="pull-right"><a class="btn btn-info" />Reecover</a></span>
                </div>
            </form>*@
    </div>

    <script src="~/Content/matrix/js/jquery.min.js"></script>
    <script src="~/Content/matrix/js/matrix.login.js"></script>
</body>
</html>
