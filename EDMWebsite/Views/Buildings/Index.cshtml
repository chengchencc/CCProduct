@{
    ViewBag.Title = "建筑分类能耗对比";
    Layout = "~/Views/Shared/_MatrixLayout.cshtml";
    var selector = ViewData["Buildings"] as List<EDMWebsite.Models.DbModels.Comdict>;
}
@section Styles {
    <link rel="stylesheet" href="~/Content/matrix/css/select2.css" />
}

@section Scripts {
    <script src="~/Content/highchart/highcharts.src.js"></script>
    <script type="text/javascript">
        $(function () {
            $("> a", "#buildings-manage").click();
            //$("#buildings-manage").addClass('active');

            //$("#basic-data").addClass("open");
            $("> ul", "#buildings-manage").show();
            $($("li", "#buildings-manage > ul")[0]).addClass("active");


            $('select').select2();
            $("#building-selector").on("change", function (e) {
                console.log($(this).find("option:selected").text());
            });


            $('#chartContainer').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false
                },
                title: {
                    text: '行政办公建筑能耗对比, 2014'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                },
                series: [{
                    type: 'pie',
                    name: '占比',
                    data: [
                        ['办公室', 45.0],
                        ['后勤楼', 26.8],
                        {
                            name: '物管楼',
                            y: 12.8,
                            sliced: true,
                            selected: true
                        },
                        ['图书馆', 8.5],
                        ['博文楼', 6.2],
                        ['其他', 0.7]
                    ]
                }]
            });


        });

    </script>
}


<!--breadcrumbs-->
<div id="content-header">
    <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> @ViewBag.Title</a></div>
</div>
<!--End-breadcrumbs-->

<div class="container-fluid">
    <div class="row-fluid">
        <div class="offset3 span6">
            <select id="building-selector">
                @foreach (var item in selector)
                {
                    <option value=@item.Key>@item.Value</option>
                }
            </select>
        </div>
    </div>


    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-file"></i> </span>
                    <h5>行政办公建筑能耗对比</h5>
                </div>
                <div class="widget-content nopadding">
                    <div style="position: absolute;z-index: 1000;">
                        <div data-toggle="buttons-radio" class="btn-group">
                            <button class="btn btn-primary  " type="button">水</button>
                            <button class="btn btn-primary  " type="button">电</button>
                            <button class="btn btn-primary " type="button">暖</button>
                        </div>
                        <a href="#" class="btn btn-primary btn-mini">水</a>
                        <a href="#" class="btn btn-success btn-mini">电</a>
                        <a href="#" class="btn btn-danger btn-mini">暖</a>
                    </div>
                    <div id="chartContainer"></div>

                </div>
            </div>
        </div>
    </div>
</div>


